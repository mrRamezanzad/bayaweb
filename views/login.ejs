<%- include('partials/__header--start') %> 
<title>
  login
</title>
<%- include('partials/__styles') %> 
<%- include('partials/__header--end') %> 

<%- include('partials/__navbar.ejs', {title, loggedIn: false}) %> 

<main class="hero is-fullwidth is-fullheight is-align-items-center">
  <div class="hero-body">
    <section class="is-flex is-full is-flex-direction-column is-justify-content-center is-align-items-center">
      <div class="column has-text-centered">
        <h1 class="title is-2">Login</h1>
      </div>

      <div class="column">
        <form action="/auth/login" method="POST" class="form column mx-auto ">

          <div class="field">
            <lable class='label' for="username">Username: </lable>
            <div class="control has-icons-left">
              <input type="text" id="username" class="input" name="username">
              <span class="icon is-small is-left"><i class="fa fa-user"></i></span>
            </div>
          </div>

          <div class="field">
            <lable class='label' for="password">Password: </lable>
            <div class="control has-icons-left">
              <input type="text" id="password" class="input" name="password">
              <span class="icon is-small is-left">
                <i class="fa fa-key"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <div class="control has-text-centered">
              <button class="button is-primary is-outlined">Login</button>
            </div>
          </div>
        </form>
      </div>
    </section>
  </div>
</main>

<%- include('partials/__scripts') %>
<script src="/javascripts/index.js"></script>
<%- include('partials/__footer') %>